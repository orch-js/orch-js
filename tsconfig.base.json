{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@orch/*": ["packages/*/src"],
      "@orch/model/*": ["packages/model/src/*"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "target": "es5"
  }
}
