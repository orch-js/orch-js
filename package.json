{
  "name": "orch-js",
  "private": true,
  "author": "Runjuu",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s clean build:lib build:lerna",
    "build:lib": "tsc -b packages/*/tsconfig.build.json",
    "build:lerna": "lerna run build --parallel",
    "clean": "lerna run clean --parallel",
    "format:package": "yarn format-package '**/package.json' -w -c format-package.json",
    "lint": "run-s lint:eslint lint:tsc",
    "lint:eslint": "eslint . --ext .ts,.tsx --fix --max-warnings 0",
    "lint:tsc": "lerna run lint:tsc --parallel",
    "prettier": "prettier 'packages/**/*.@(ts|tsx|html|json)' --write",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/package.json": [
      "yarn run format:package",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "yarn run lint:eslint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "@types/react": "^16.9.19",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "format-package": "^5.2.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lerna": "^3.17.0",
    "lint-staged": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.5"
  }
}
