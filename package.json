{
  "name": "orch-js",
  "private": true,
  "author": "Runjuu",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s clean build:lib build:lerna",
    "build:lerna": "lerna run build --parallel",
    "build:lib": "tsc -b packages/*/tsconfig.{cjs,esm}.json",
    "clean": "lerna run clean --parallel",
    "format:package": "yarn format-package '**/package.json' -w -c format-package.json",
    "lint": "run-s lint:eslint lint:tsc",
    "lint:eslint": "eslint . --ext .ts,.tsx --fix --max-warnings 0",
    "lint:tsc": "lerna run lint:tsc --parallel",
    "prettier": "prettier 'packages/**/*.@(ts|tsx|html|json)' --write",
    "publish": "lerna publish from-package",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/package.json": [
      "yarn run format:package",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "yarn run lint:eslint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/react": "^16.9.35",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "format-package": "^5.2.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.21.0",
    "lint-staged": "^10.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "tslib": "^2.0.0",
    "ttypescript": "^1.5.10",
    "typescript": "^3.9.3"
  }
}
