{
  "name": "orch-js",
  "private": true,
  "author": "Runjuu",
  "scripts": {
    "build": "run-s clean build:lib build:lerna",
    "build:lerna": "lerna run build --parallel",
    "build:lib": "tsc -b packages/*/tsconfig.cjs.json packages/*/tsconfig.esm.json",
    "clean": "lerna run clean --parallel",
    "coverage": "vitest run --coverage",
    "format:package": "yarn format-package '**/package.json' -w -c format-package.json",
    "lint": "run-s lint:eslint lint:tsc",
    "lint:eslint": "eslint . --ext .ts,.tsx --fix --max-warnings 0",
    "lint:tsc": "lerna run lint:tsc --parallel",
    "prepare": "husky install",
    "prettier": "prettier 'packages/**/*.@(ts|tsx|html|json)' --write",
    "release:prod": "lerna version",
    "test": "vitest"
  },
  "lint-staged": {
    "**/package.json": [
      "yarn run format:package",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "yarn run lint:eslint",
      "git add"
    ]
  },
  "packageManager": "pnpm@8.6.9",
  "devDependencies": {
    "@types/node": "^20.4.4",
    "@types/react": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "format-package": "^7.0.0",
    "husky": "^8.0.3",
    "lerna": "^7.1.4",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.0",
    "ttypescript": "^1.5.15",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  }
}
