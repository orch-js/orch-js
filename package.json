{
  "name": "orch-js",
  "private": true,
  "author": "Runjuu",
  "scripts": {
    "build": "run-s clean build:lib build:examples",
    "build:examples": "pnpm run -r build",
    "build:lib": "tsc -b packages/*/tsconfig.cjs.json packages/*/tsconfig.esm.json",
    "clean": "pnpm run -r clean",
    "coverage": "vitest run --coverage",
    "format:package": "yarn format-package '**/package.json' -w -c format-package.json",
    "lint": "run-s lint:eslint lint:tsc",
    "lint:eslint": "eslint . --ext .ts,.tsx --fix --max-warnings 0",
    "lint:tsc": "pnpm run -r lint:tsc",
    "prepare": "husky install",
    "prettier": "prettier '@(packages|examples)/**/*.@(ts|tsx|html|json)' '*.@(js|ts|tsx|html|json|yaml)' --write",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag",
    "test": "vitest"
  },
  "packageManager": "pnpm@8.6.9",
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@types/node": "^20.4.4",
    "@types/react": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitest/coverage-v8": "^0.33.0",
    "bumpp": "^9.1.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "format-package": "^7.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.0",
    "ttypescript": "^1.5.15",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  }
}
